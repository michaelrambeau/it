@import 'nib'
$w = 996px
$h = 684px
$small-screen = "screen and (max-width: 550px)"
$big-screen = "screen and (min-width: 996px)"
$not-big-screen = "screen and (max-width: 995px)"

//From https://github.com/bradbirdsall/Swipe
.swipe {
  overflow: hidden;
  visibility: hidden;
  position: relative;
}
.swipe-wrap {
  overflow: hidden;
  position: relative;
}
.swipe-wrap > div {
  float:left;
  width:100%;
  position: relative;
}

body
  background transparent url('lilly-background.jpg')
  margin: 0
  font-family: 'Arial','Trebuchet MS'
  font-size: 18px
  @media $small-screen
    font-size 16px
ul
  padding 0 20px
  li
    margin-bottom 5px
a:hover
  text-decoration none

.container
  margin 0 auto;
  max-width: $w

.main
  background: transparent url('automn.jpg') no-repeat
  height $h
  

.picture
  position relative
  height $h

.slider-container
  max-width 500px
  position absolute
  top 195px
  right 20px
  @media $small-screen
    top 95px
    right 0
    width 100%

.slide
  background-color rgba(256,256,256,0.8)
  background-color rgba(55,55,55,0.7)
  color black
  color white
  padding 20px
  min-height 310px
  a
    color white
  @media $small-screen
    min-height 370px
    padding 10px
  .arrow
     position absolute  
     top 18px
     @media @small-screen
      top 7px
     font-size 28px
     cursor pointer
     @media $big-screen
      display none
  .next
    right 5px
  .previous
    left 5px


#header
  width 100%
  //height 95px
  margin-top 60px
  background-color rgba(55,55,55,0.7)
  margin-bottom 20px 0
  position absolute
  color white
  border-bottom: 7px solid rgba(0,0,0,0.5);
  z-index 6

  @media $small-screen
    margin-top 34px
    border-style none

  .content
    max-width $w
    margin 20px auto
    @media $small-screen
      margin 5px auto 0

html, body {
	height: 100%;
}
body
  //position absolute
#wrapper {
  width 100%
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto 20px; /* the bottom margin is the negative value of the footer's height */
}

#footer
  height 100px
  width 100%
  //position absolute
  //bottom 0
  background-color #797979
  color white
  a
    color white
  .container
    padding 20px

.left
  float left
  margin-right 30px
  @media $small-screen
    float none
.right
  float right
  @media $small-screen
    float none
    margin 0 auto
    display table

ul.languages
  list-style none
  padding-left 0

.flag
  vertical-align middle

h2
  margin 0 0 15px
  text-align center

$h = 44px
.nav
  position absolute
  bottom 70px
  width 100%
  //margin-top 50px
  height 44px
  z-index 1
  background-color rgba(55,55,55,0.7)
  @media $not-big-screen
    display none

  .arrow
    background transparent url('bg-slide-arrows.png')
    position absolute
    z-index 2
    width 50px
    height $h
    cursor pointer

  .arrow-left
    left 0
    top 0
    &:hover
      background-position 0 -44px;
  .arrow-right
    right 0
    top 0
    background-position -50px 0
    &:hover
      background-position -50px -44px;
  ul
    margin 0 50px
    padding 0
    li
      float left
      text-align center
      list-style none
      a
        display block
        @media $small-screen
          display none
        width 149px
        height $h
        text-decoration none
        line-height $h
        color rgba(255,255,255,0.7)
        font-size 16px
        font-weight bold
        &:hover
          background-color white
          color rgba(255,0,0,0.7)
      a.current
        color white
        background-color  rgba(255,0,0,0.7)

h1
  font-family 'Pinyon Script', cursive
  font-size 50px
  margin 10px 30px
  @media $small-screen
    font-size 38px
    text-align center
    margin 0

.img-responsive
  width 100%
  height auto

.techno
  margin-top 15px

@media $small-screen
  .flag
    width 30px

.english-version
  //display block
  float right
  color white
  background-color rgba(200,0,0,0.9)
  padding 5px 20px
  font-size 14px
  text-decoration none
  &:hover
    text-decoration underline
    
